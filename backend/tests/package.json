{
  "name": "company-hr-tests",
  "version": "1.0.0",
  "description": "Test suite for Company HR System",
  "scripts": {
    "test": "jest --coverage --verbose",
    "test:unit": "jest --testPathPattern=unit --verbose",
    "test:integration": "jest --testPathPattern=integration --verbose",
    "test:e2e": "jest --testPathPattern=e2e --verbose --runInBand",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --reporters=default --reporters=jest-junit"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/*.js"
    ],
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["./tests/setup.js"]
  }
}
