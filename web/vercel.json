{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "name": "continuum-hr",
  "regions": ["bom1"],
  "framework": "nextjs",
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm install",
  "crons": [
    {
      "path": "/api/cron/check-in-reminder",
      "schedule": "10,30 9,10 * * 1-5"
    },
    {
      "path": "/api/cron/check-out-reminder",
      "schedule": "0 15,16 * * 1-5"
    },
    {
      "path": "/api/cron/hr-attendance-alert",
      "schedule": "30 10 * * 1-5"
    },
    {
      "path": "/api/cron/trial-expiration",
      "schedule": "0 9 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": "@clerk_publishable_key",
    "CLERK_SECRET_KEY": "@clerk_secret_key",
    "DATABASE_URL": "@database_url",
    "DIRECT_URL": "@direct_url",
    "NEXT_PUBLIC_CONSTRAINT_ENGINE_URL": "@constraint_engine_url",
    "RAZORPAY_KEY_ID": "@razorpay_key_id",
    "RAZORPAY_KEY_SECRET": "@razorpay_key_secret",
    "NEXT_PUBLIC_RAZORPAY_KEY_ID": "@razorpay_key_id",
    "CRON_SECRET": "@cron_secret"
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" }
      ]
    }
  ]
}
